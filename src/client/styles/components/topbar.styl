#topbar
  background transparent
  position fixed
  top 0
  left 0
  width 100%
  height $topbarHeight
  padding 20px
  color $steel
  display flex
  align-items center
  > :not(:last-child)
    margin-right 20px
  a
    color inherit
    text-decoration none
  .logo
    display inline-block
    height $topbarHeight - 40
    line-height $topbarHeight - 40
    width 100px
    background orangered
    text-align center
    color white
  .rc-menu
    display inline-block
    list-style none
    flex 1
    padding 0
    margin 0
    .rc-menu-item
      display inline-block
      margin-right 20px
